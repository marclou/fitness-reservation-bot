{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "no-console": "off",
        "indent": "off",
        "no-tabs": "off",
        "comma-dangle": "warn",
        "no-extra-semi": "warn",
        "no-unused-vars": [
            "warn",
            { "vars": "all", "args": "none" }
        ],
        "no-use-before-define": ["error", { "functions": false, "classes": true }],
    }
}
