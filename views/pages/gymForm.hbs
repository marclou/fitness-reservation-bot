{{> header}}

<h3>Fill-in information</h3>

<form id="gym-add" action="/dashboard/gym/create" method="post">
  <p>
    <label for="name">Name : </label>
    <input type="text" id="name" name="gym_name" required>
  </p>
  <p>
    <label for="address">Address : </label>
    <input type="text" id="address" name="gym_address_value" required>
  </p>
  <p>
    <label for="maxAttendance">Attendance Max : </label>
    <input type="number" id="maxAttendance" name="gym_maxAttendance" required>
  </p>
  <fieldset>
      <legend>
          Facilities
      </legend>
      <p>
        <label for="facilities_shower">Shower : </label>
        <select id="facilities_shower" name="gym_facilities_shower">
            <option value="true" selected>Yes</option>
            <option value="false">No</option>
        </select>
      </p>
      <p>
        <label for="facilities_dressroom">Dressroom : </label>
        <select id="facilities_dressroom" name="gym_facilities_dressroom">
            <option value="true" selected>Yes</option>
            <option value="false">No</option>
        </select>
      </p>
  </fieldset>

  <p>
    <button type="submit">Create Gym</button>
  </p>
</form>

<form id="gym-add-payload" action="/dashboard/gym/create" method="post">
    <input type="hidden" name="data" value="">
</form>

{{>footer}}

<script type="text/javascript" src="js/libs/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="js/index.js"></script>
