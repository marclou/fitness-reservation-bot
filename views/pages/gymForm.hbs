{{> header}}

<h3>Fill-in information</h3>

<form id="gym-add">
  <p>
    <label for="name">Name : </label>
    <input type="text" id="name" name="gym_name" {{#if gym}} value="{{gym.name}}" {{/if}} required>
  </p>
  <p>
    <label for="address">Address : </label>
    <input type="text" id="address" name="gym_address_value" {{#if gym}} value="{{gym.address.value}}" {{/if}} required>
  </p>
  <p>
    <label for="maxAttendance">Attendance Max : </label>
    <input type="number" id="maxAttendance" name="gym_maxAttendance" {{#if gym}} value="{{gym.maxAttendance}}" {{/if}} required>
  </p>
  <fieldset>
      <legend>
          Facilities
      </legend>
      <p>
        <label for="facilities_shower">Shower : </label>
        <select id="facilities_shower" name="gym_facilities_shower">
            {{#if gym}}
                {{#if gym.facilities.shower}}
                    <option value="true" selected>Yes</option>
                    <option value="false">No</option>
                {{else}}
                    <option value="true">Yes</option>
                    <option value="false" selected>No</option>
                {{/if}}
            {{else}}
                <option value="true" selected>Yes</option>
                <option value="false">No</option>
            {{/if}}
        </select>
      </p>
      <p>
        <label for="facilities_dressroom">Dressroom : </label>
        <select id="facilities_dressroom" name="gym_facilities_dressroom">
            {{#if gym}}
                {{#if gym.facilities.dressRoom}}
                    <option value="true" selected>Yes</option>
                    <option value="false">No</option>
                {{else}}
                    <option value="true">Yes</option>
                    <option value="false" selected>No</option>
                {{/if}}
            {{else}}
                <option value="true" selected>Yes</option>
                <option value="false">No</option>
            {{/if}}
        </select>
      </p>
  </fieldset>

  <p>
    <button type="submit">Validate</button>
  </p>
</form>

<form id="gym-add-payload" action="{{#if gym}}{{gym.url}}/update{{else}}/dashboard/gym/create{{/if}}" method="post">
    <input type="hidden" name="data" value="">
</form>

{{>footer}}

<script type="text/javascript" src="js/libs/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="js/index.js"></script>
