{{> header}}

<h3>Fill-in information</h3>

<form id="workout-add">
  <p>
    <label for="name">Name : </label>
    <input type="text" id="name" name="workout_name" required>
  </p>
  <p>
    <label for="location">Location : </label>
    <select id="location" name="workout_location" required>
      {{#each gyms}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </p>
  <p>
    <label for="duration">Duration (min) : </label>
    <input type="number" id="duration" name="workout_duration" required>
  </p>

  <fieldset>
      <legend>
          Costs
      </legend>
      <p>
        <label for="cost_indiv">Individual : </label>
        <input type="number" id="cost_indiv" name="workout_cost_indiv" required>
      </p>
      <p>
        <label for="cost_group">Group (cost/person) : </label>
        <input type="number" id="cost_group" name="workout_cost_group">
      </p>
  </fieldset>

  <p>
    <label for="date">Date : </label>
    <input data-toggle="datepicker" id="date" name="workout_date" required>
  </p>
  <p>
      <label for="time">Time : </label>
      <input class="timepicker" id="time" name="workout_time" required/>
  </p>

  <fieldset>
      <legend>
          Miscellaneous
      </legend>
      <p>
        <label for="misc_kr">Korean : </label>
        <textarea type="text" id="misc_kr" name="workout_misc_kr"></textarea>
      </p>
      <p>
        <label for="misc_en">English : </label>
        <textarea id="misc_en" name="workout_misc_en"></textarea>
      </p>
  </fieldset>

  <p>
    <button type="submit">Validate workout</button>
  </p>
</form>

<form id="workout-add-payload" action="/dashboard/workout/create" method="post">
    <input type="hidden" name="data" value="">
</form>

{{>footer}}

<script src="js/libs/jquery-3.3.1.min.js"></script>
<script src="js/libs/datepicker.min.js"></script>
<script src="js/libs/jquery.timepicker.js"></script>
<script src="js/index.js"></script>
<script type="text/javascript">
    $(document).ready(function(){
        $('[data-toggle="datepicker"]').datepicker({
            autoHide: true
        });
        $('#time').timepicker({
            minTime: '10:00 AM',
            maxTime: '10:00 PM',
        });
    });
</script>
